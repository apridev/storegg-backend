<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active\">Ubah Nominal</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              
              <div class="card card-success">
                <div class="card-header">
                  <h3 class="card-title">Ubah Nominal "<%= nominal.coinName %>" </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                        <label>Nama Coin</label>
                        <select class="form-control select2" style="width: 100%;" name="coinName" required>
                          <option selected="selected">Pilih Coin</option> 
                          <option value="Gold"
                          <% if(nominal.coinName === "Gold"){ %>
                            selected
                          <% } %>
                          >
                          Gold
                        </option>
                          <option value="Diamond"
                          <% if(nominal.coinName === "Diamond"){ %>
                            selected
                          <% } %>
                          >
                          Diamond
                        </option>
                          <option value="Jawel"
                          <% if(nominal.coinName === "Jawel"){ %>
                            selected
                          <% } %>
                          >
                          Jawel
                        </option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="coinQuantity">Jumlah Coin</label>
                        <input type="number" class="form-control" id="coinQuantity" name="coinQuantity" value="<%= nominal.coinQuantity %>" placeholder="Masukan Jumlah Coin" required>
                      </div>
                      <div class="form-group">
                        <label for="price">Harga Coin</label>
                        <input type="number" value="<%= nominal.price %>" class="form-control" id="price" name="price" placeholder="Masukan Harga Coin" required>
                      </div>
                  
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-success">Ubah</button>
                  </div>
                </form>
              </div> 
             
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>