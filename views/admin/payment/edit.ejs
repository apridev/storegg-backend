<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Jenis Pembayaran</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Pembayaran</a></li>
              <li class="breadcrumb-item active\">Ubah Pembayaran</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              
              <div class="card card-success">
                <div class="card-header">
                  <h3 class="card-title">Ubah Jenis Pembayaran</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                        <label for="type">Tipe Pembayaran</label>
                        <input type="text" class="form-control" id="type" name="type" value="<%= payment.type %>" placeholder="Masukan Tipe Pembayaran" required>
                    </div>

                    <div class="form-group">
                        <label>Bank</label>
                        <div class="select2-success">
                          <select
                          class="form-control js-example-basic-multiple"
                          multiple="multiple"
                            style="width: 100%"
                            data-placeholder="Pilih Nominal"
                            name="banks"
                            required  
                          >
                            <% bank.forEach(bank=>{ %>
                            <option value="<%= bank._id %>"
                              <% payment.banks.forEach(paymentBanks =>{ %>
                                <% if(bank._id.toString() === paymentBanks._id.toString()){ %>
                                  selected
                               <% } %>
                             <% }) %>
                              >
                              <%= bank.nameBank %> - <%= bank.name %> - <%= bank.noRekening %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                  </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-success">Ubah</button>
                  </div>
                </form>
              </div> 
             
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>